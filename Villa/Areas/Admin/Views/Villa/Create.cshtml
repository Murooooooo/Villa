@model Villa
<form method="post" enctype="multipart/form-data" >
    <div class="form-group">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" type="text" class="form-control" placeholder="Enter Location">
        <span asp-validation-for="Location" ></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="text" class="form-control" placeholder="Enter Price">
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhotoUrl">Photo</label>
        <input name="file" type="file" class="form-control" placeholder="Enter Photo">
        <span asp-validation-for="Location"></span>
    </div>
    <div asp-validation-summary="All" ></div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>